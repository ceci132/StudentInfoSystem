<Window x:Class="StudentInfoSystem.InspectorLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentInfoSystem"
        mc:Ignorable="d"
        Title="InspectorLoginWindow" Height="450" Width="800">
    <Grid>
        <DataGrid HorizontalAlignment="Left" Height="257" Margin="127,78,0,0" VerticalAlignment="Top" Width="609"
                  ItemsSource="{Binding}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="First Name" Binding="{Binding Path=name}" />
                <DataGridTextColumn Header="Surname" Binding="{Binding Path=surname}"/>
                <DataGridTextColumn Header="Family Name" Binding="{Binding Path=lastName}"/>
                <DataGridTextColumn Header="Faculty" Binding="{Binding Path=faculty}"/>
                <DataGridTextColumn Header="Specialty" Binding="{Binding Path=specialty}"/>
                <DataGridTextColumn Header="Degree" Binding="{Binding Path=degree}"/>
                <DataGridTextColumn Header="Faculty Number" Binding="{Binding Path=facultyNumber}"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
